#!/usr/bin/env pluto

class Animal {
  init of type $species called $name {
    self.species = species
    self.name = name
  }
  
  def speak {
    print "{} the {} says hello!" with (self.name, self.species)
  }
}

class Lion extends Animal {
  init called $name {
    self.species = "lion"
    self.name = name
  }
}

l = Lion called "Leo"
l: speak
